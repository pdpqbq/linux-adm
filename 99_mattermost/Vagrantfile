                  {ip: '192.168.200.12', adapter: 3, netmask: "255.255.255.0"} # ext
                ],
        :ram => 256
  },
  :pxc1 => {
        :box_name => "centos/7",
        :net => [
                  {ip: '192.168.100.101', adapter: 2, netmask: "255.255.255.0"}
