        :ram => 512
  },
  :pxc3 => {
        :box_name => "centos/7",
        :net => [
                  {ip: '192.168.100.103', adapter: 2, netmask: "255.255.255.0"}
                ],
        :ram => 512
  },
  :sqlp1 => {
        :box_name => "centos/7",
        :net => [
                  {ip: '192.168.100.104', adapter: 2, netmask: "255.255.255.0"}
                ],
        :ram => 512
  },
  :sqlp2 => {
        :box_name => "centos/7",
        :net => [
                  {ip: '192.168.100.105', adapter: 2, netmask: "255.255.255.0"}
                ],
        :ram => 512
  },
  :app1 => {
        :box_name => "centos/7",
        #:public => {:ip => '10.10.10.1', :adapter => 1},
