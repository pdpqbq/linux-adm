! Configuration File for keepalived

global_defs {
   vrrp_skip_check_adv_addr
   vrrp_strict
   vrrp_garp_interval 0.5
   vrrp_gna_interval 0.5
}

vrrp_instance VI_2 {
    state MASTER
    interface eth1
    virtual_router_id 22
    priority {{ priority }}
    preempt
    advert_int 1
#    authentication {
#        auth_type PASS
#        auth_pass 2222
#    }
    virtual_ipaddress {
        192.168.100.90
    }
    notify /usr/local/sbin/notify-keepalived.sh
}
